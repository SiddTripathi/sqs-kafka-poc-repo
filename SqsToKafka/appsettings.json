{
  "Kafka": {
    "BootstrapServers": "", //change to localhost:9092 when running locally. Change to redpanda for docker
    "Acks": "all",
    "MessageTimeoutMs": 30000,
    "DefaultTopic": "sqs.to.kafka.dev"
  },
  "Sqs": {
    "Profile": "", //profile should be empty while running in docker. This 'sqs-dev' only works while running it locally
    "Region": "",
    "QueueUrl": "",
    "WaitTimeSeconds": 10,
    "MaxMessages": 5,
    "VisibilityTimeoutSeconds": 30,
    "EmptyWaitDelayMs": 2000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "SqsToKafka": "Debug",
      "SqsToKafka.SqsToKafkaWorker": "Debug"
    }
  },
  "dedup": {
    "enabled": true,
    "ttlSeconds": 600,
    "cleanupIntervalSeconds": 30,
    "maxEntries": 50000
  },
  "Routing": {
    "BodyField": "event",
    "Map": {
      "payment.succeeded": "routed.a",
      "order.cancelled": "routed.b"
    }
  },
  "DedupSql": {
    "Enabled": false,
    "ConnectionString": "",
    "TtlDays": 7
  },
  "Retry": {
    "BaseDelayMs": 500,
    "MaxDelayMs": 30000,
    "MaxProduceAttempts": 6,
    "Jitter": true
  },
  "Visibility": {
    "AutoExtend": true,
    "StepSeconds": 25,
    "MaxPerMessageSeconds": 300
  },
  "DeadLetter": {
    "Enabled": true,
    "Topic": "routed.dead",
    "IncludeBody": true,
    "IncludeAttributes": true
  },
  "Replay": {
    "Enabled": false, // turn on later if you want local recording
    "ConnectionString": "", // optional for local; can leave empty
    "ContainerName": "sqskafka-replay-dev",
    "BasePath": "by-time",
    "EnvironmentTag": "Development"
  }
}
